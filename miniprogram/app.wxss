/**app.wxss**/
page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  color: #333;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 主题色定义 */
.theme-color {
  color: #8BC34A; /* 浅绿色主题 */
}

.theme-bg {
  background-color: #8BC34A;
}

.theme-border {
  border-color: #8BC34A;
}

.btn-primary {
  background-color: #8BC34A;
  color: #fff;
  border: none;
}

.btn-primary:active {
  background-color: #7CB342;
}

/* 通用按钮样式 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

/* 通用卡片样式 */
.card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
} 