  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 选手列表样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
}

.player-list {
