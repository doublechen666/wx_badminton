  text-align: center;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 10rpx;
  border-radius: 10rpx;
}

/* 开始页面样式 */
.start-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.start-image {
