}

.table-nav-scroll {
  width: 100%;
  white-space: nowrap;
}

.table-nav-items {
  display: inline-flex;
  flex-wrap: nowrap;
}

.table-nav-item {
  display: inline-block;
  padding: 8rpx 20rpx;
  margin-right: 15rpx;
  background-color: #e6f7f0;
  color: #07C160;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: 1rpx solid #07C160;
}

.table-nav-item:active {
  background-color: #07C160;
  color: white;
}

/* 比赛表格样式 */
.match-table-container {
  margin-bottom: 40rpx;
  overflow-x: auto;
  width: 100%;
  position: relative;
  -webkit-overflow-scrolling: touch; /* 增强iOS滚动体验 */
  scrollbar-width: thin; /* 细滚动条 */
  scrollbar-color: #ddd transparent; /* 滚动条颜色 */
}

/* 滚动提示样式 */
.scroll-hint {
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 10rpx;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  animation: pulse 1.5s infinite;
  z-index: 2;
}

@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}

.match-table {
  width: 100%;
  border-collapse: collapse;
  white-space: nowrap;
  display: table; /* 确保表格被正确识别为表格 */
  min-width: max-content; /* 确保表格不会被压缩 */
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
  width: max-content; /* 确保行不会被压缩 */
}

.header-row {
  background-color: #f8f8f8;
  font-weight: bold;
}

.table-cell {
  padding: 12rpx; /* 减小内边距 */
  text-align: center;
  min-width: 100rpx; /* 减小最小宽度 */
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #eee;
  font-size: 26rpx; /* 减小字体大小 */
}

.player-name-cell {
  background-color: #f8f8f8;
  font-weight: bold;
  min-width: 140rpx; /* 减小最小宽度 */
  position: sticky;
  left: 0;
  z-index: 2; /* 提高z-index确保在最上层 */
  box-shadow: 2rpx 0 5rpx rgba(0, 0, 0, 0.1); /* 添加阴影以区分固定列 */
}

.header-cell {
  font-size: 26rpx; /* 减小字体大小 */
}

.disabled-cell {
  background-color: #f5f5f5;
}

.score-input {
  width: 100%;
  text-align: center;
  height: 60rpx;
}

/* 瑞士轮比赛样式 */
