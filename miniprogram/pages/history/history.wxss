  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.winrate-row {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}

.winrate-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}

.winrate-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  width: 25%;
}

.winrate-value {
  font-size: 28rpx;
  color: #333;
  width: 50%;
