  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}

.selected-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.selected-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background-color: #8BC34A;
  color: #fff;
  border-radius: 30rpx;
  font-size: 24rpx;
}

