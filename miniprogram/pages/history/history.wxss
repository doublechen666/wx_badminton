/* 容器样式 - 使用flex布局填满高度 */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 头部样式 - 调整到顶�?*/
.header {
  text-align: center;
  margin: 0;
  padding: 10rpx 0 20rpx;
}

.h2h-title {
  font-size: 120rpx;
  font-weight: 900;
  font-style: italic;
  color: #e53935;
  text-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.4);
  letter-spacing: 4rpx;
  transform: perspective(500rpx) rotateX(10deg);
  margin: 0;
  line-height: 1.2;
}

.header-subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #aaa; /* 浅灰�?*/
  margin-top: -10rpx;
}

/* 当前积分显示 */
.score-container {
  width: 80%;
  margin: 10rpx auto;
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgba(244, 67, 54, 0.3);
}

.score-title {
  font-size: 24rpx;
  color: #d32f2f;
  margin-bottom: 5rpx;
  font-weight: bold;
}

.score-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #f44336;
  margin-bottom: 5rpx;
}

/* 总胜率显�?- 调整布局和间�?*/
.total-stats {
  display: flex;
  justify-content: space-around; /* 改为均匀分布 */
  align-items: center;
  margin-top: 15rpx;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
  font-weight: bold; /* 加粗 */
}

.stat-win-loss {
  font-size: 28rpx;
  color: #333;
  font-weight: bold; /* 加粗 */
}

.stat-percentage {
  font-size: 32rpx;
  font-weight: bold;
  color: #f44336;
}

/* 筛选按钮区�?*/
.filter-section {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
  width: 100%;
}

.filter-btn {
  width: 32%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e0e0e0;
}

.filter-btn.active {
  background-color: #8BC34A;
  color: white;
}

/* 历史记录列表 - 填满剩余高度 */
.history-list {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.history-scroll {
  flex: 1;
  height: 100%;
}

.history-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.history-item:last-child {
  border-bottom: none;
}

.match-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.match-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.team {
  width: 42%;
  padding: 10rpx;
  border-radius: 10rpx;
}

.team.win {
  background-color: rgba(139, 195, 74, 0.1);
  border: 1rpx solid rgba(139, 195, 74, 0.3);
}

.team.lose {
  background-color: rgba(244, 67, 54, 0.05);
}

.player {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.player:last-child {
  margin-bottom: 0;
}

.player-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.player-name {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.double-team {
  display: flex;
  flex-direction: column;
}

.score {
  width: 16%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.score-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.score-number.win {
  color: #8BC34A;
}

.score-separator {
  font-size: 30rpx;
  color: #999;
  margin: 0 6rpx;
}

.rating-change {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.rating-left, .rating-right {
  font-size: 24rpx;
}

.gain {
  color: #4CAF50;
}

.loss {
  color: #F44336;
}

/* 无记录提示样�?*/
.no-records {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.no-records-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #bbb;
  padding: 10rpx 30rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

/* 刷新提示样式 */
.score-refresh-hint {
  font-size: 22rpx;
  color: #4CAF50;
  margin-left: 10rpx;
  font-style: italic;
  font-weight: normal;
}

/* 模态窗口样�?*/
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
  padding-bottom: 0;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  flex-shrink: 0;
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
  padding-bottom: 20rpx;
}

.filter-category {
  margin-bottom: 20rpx;
  width: 100%;
}

.filter-group-title {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 10rpx;
  font-weight: bold;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx; /* 抵消子元素的margin */
}

.filter-option-item {
  margin: 10rpx;
  padding: 15rpx 25rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  display: inline-block;
  border: 1rpx solid transparent;
}

.filter-option-item.selected {
  background-color: #e8f5e9;
  color: #4CAF50;
  border-color: #8BC34A;
  font-weight: bold;
}

.filter-list {
  max-height: 50vh;
  overflow-y: auto;
  padding-bottom: 20rpx;
}

.all-option {
  width: 100%;
  text-align: center;
  padding: 15rpx 0;
  margin-bottom: 15rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
}

.modal-footer {
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  background-color: #fff;
  z-index: 10;
}

.modal-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.modal-btn-clear {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.modal-btn-primary {
  background-color: #8BC34A;
  color: #fff;
}

