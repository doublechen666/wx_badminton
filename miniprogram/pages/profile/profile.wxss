  overflow: hidden;
  text-overflow: ellipsis;
}

.player-list-score {
  font-size: 24rpx;
  color: #8BC34A;
}

.player-actions {
  display: flex;
  flex-shrink: 0;
  margin-left: 15rpx;
}

.player-action {
  margin-left: 15rpx;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.edit {
  background-color: #e1f5fe;
  color: #0288d1;
}

.delete {
  background-color: #ffebee;
  color: #e53935;
}

.no-players {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 管理员统计信息 */
.admin-stats {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin: 30rpx 0;
}

.admin-info {
  font-size: 26rpx;
  color: #888;
  margin-top: 20rpx;
  text-align: center;
}

/* 管理员面板使用不同的颜色 */
.score-container:has(.admin-stats) {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  border: 1rpx solid rgba(76, 175, 80, 0.3);
}

.history-btn {
  background-color: #fff9c4; /* 淡黄色 */
  color: #ffa000; /* 琥珀色 */
}

/* 导入导出选项样式 */
.export-options {
  margin-bottom: 20rpx;
}

.option-group {
  margin-bottom: 30rpx;
}

.option-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.option-items {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.option-item {
  padding: 10rpx 30rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.option-item.selected {
  background-color: #c8e6c9;
  color: #2e7d32;
  border-color: #81c784;
}

/* 数据域样式 */
.data-field {
  margin: 20rpx 0;
  width: 100%;
}

.data-field textarea {
  width: 100%;
  min-height: 200rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: monospace;
}

.copy-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.copy-btn, .download-btn, .upload-btn {
  flex: 1;
  max-width: 50%;
  margin: 0;
  font-size: 28rpx;
}

.download-btn {
  background-color: #bbdefb;
  color: #1565c0;
}

.upload-btn {
  background-color: #e1f5fe;
  color: #0277bd;
  margin-bottom: 20rpx;
}

/* 性别选择样式 */
.gender-selection {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.gender-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 48%;
  padding: 20rpx 0;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #f5f5f5;
}

.gender-option.selected {
  background-color: #e8f5e9;
  border-color: #4CAF50;
}

.gender-option.selected text {
  color: #4CAF50;
  font-weight: bold;
}

.gender-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.match-teams-preview {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.score-input-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.score-input {
  width: 45%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.score-separator {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 批量操作区域样式 */
.batch-operations {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 10rpx;
  margin-bottom: 15rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
}

.batch-toggle, .batch-select-all, .batch-delete-btn {
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  border-radius: 6rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.batch-toggle {
  background-color: #f0f0f0;
  color: #666;
  border: 1rpx solid #ddd;
}

.batch-select-all {
  background-color: #e8f5e9;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

.batch-delete-btn {
  background-color: #ffebee;
  color: #f44336;
  border: 1rpx solid #f44336;
}

/* 修改复选框样式，使其更加明显 */
.player-checkbox {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  z-index: 2;
}

.checkbox-outline {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #bbbbbb;
  border-radius: 6rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 当选择某项时，整个行项目的样式 - 模仿性别选择的高亮效果 */
.player-item.selected, .history-item.selected {
  background-color: #e8f5e9;
  border: 2rpx solid #4CAF50 !important;
  border-radius: 10rpx;
  padding: 20rpx 15rpx;
  margin: 10rpx 0;
  box-shadow: 0 4rpx 8rpx rgba(7, 193, 96, 0.3);
  transform: translateY(-2rpx);
  transition: all 0.2s ease;
  position: relative;
  z-index: 2;
}

/* 选中项内的文本样式 */
.player-item.selected .player-list-name, 
.history-item.selected .team-name {
  color: #4CAF50;
  font-weight: bold;
}

.player-item.selected .player-list-score {
  color: #4CAF50;
  font-weight: bold;
}

/* 选中项内的分数样式 */
.history-item.selected .match-score {
  color: #4CAF50;
  font-weight: bold;
}

/* 选中项内的日期样式 */
.history-item.selected .history-date {
  color: #4CAF50;
}

/* 选中状态下的"已选中"文本改为徽标样式 */
.player-item.selected:after, .history-item.selected:after {
  content: '已选中';
  position: absolute;
  right: 145rpx;
  top: 50%;
  transform: translateY(-50%);
  color: white;
  font-size: 22rpx;
  font-weight: bold;
  background-color: #4CAF50;
  padding: 4rpx 12rpx;
  border-radius: 30rpx;
  z-index: 1;
}

