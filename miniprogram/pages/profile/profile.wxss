  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 称号排位分范围样式 */
.title-ranges-list {
  width: 100%;
  max-height: 600rpx;
  overflow-y: auto;
}

.title-range-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.title-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.title-range {
  font-size: 28rpx;
  color: #666;
}

.current-title {
  color: #f44336;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

