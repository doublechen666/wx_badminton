}

/* 称号样式 */
.player-title {
  margin: 10rpx 0 20rpx 0;
  padding: 10rpx 30rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 30rpx;
  border: 1rpx solid rgba(244, 67, 54, 0.3);
}

.title-text {
  font-size: 32rpx;
