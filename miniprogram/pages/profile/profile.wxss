/* 容器样式 */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
}

.not-logged-in {
  width: 100%;
  display: flex;
  align-items: center;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #f0f0f0;
  margin-right: 30rpx;
}

.login-text {
  font-size: 32rpx;
  color: #999;
}

.logged-in-info {
  width: 100%;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 26rpx;
  color: #999;
}

/* 操作区域 */
.action-section {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}

.action-button {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.action-text {
  font-size: 32rpx;
  color: #333;
}

/* 积分显示区域 */
.score-section {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.score-container {
  width: 90%;
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid rgba(244, 67, 54, 0.3);
}

.score-title {
  font-size: 36rpx;
  color: #d32f2f;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.score-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #f44336;
  margin: 20rpx 0;
  text-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.score-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.score-history {
  display: flex;
  margin-top: 20rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.history-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.history-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.history-match {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.team-name {
  font-size: 28rpx;
  color: #333;
  width: 40%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.match-score {
  font-size: 32rpx;
  font-weight: bold;
  color: #f44336;
  padding: 0 10rpx;
}

.history-actions {
  display: flex;
  flex-shrink: 0;
  margin-left: 15rpx;
}

.win {
  background-color: rgba(76, 175, 80, 0.2);
  color: #388e3c;
}

.lose {
  background-color: rgba(244, 67, 54, 0.2);
  color: #d32f2f;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
  padding-bottom: 40rpx;
}

.modal-header {
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-body {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.input-group input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.switch-mode {
  text-align: center;
  font-size: 28rpx;
  color: #8BC34A;
  margin-top: 30rpx;
}

.avatar-selector {
  margin-bottom: 30rpx;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  margin: 20rpx 0;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 80rpx;
}

.change-avatar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 8rpx 0;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
}

/* 弹窗按钮样式 */
.modal-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.modal-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
}

.modal-btn-clear {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.modal-btn-primary {
  background-color: #8BC34A;
  color: #fff;
}

/* 用户信息右侧箭头 */
.arrow-right {
  margin-left: auto;
  display: flex;
  align-items: center;
}

.action-hint {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.arrow {
  font-size: 28rpx;
  color: #999;
}

/* 选手名称 */
.player-name {
  font-size: 28rpx;
  color: #8BC34A;
  margin-bottom: 10rpx;
}

/* 积分统计 */
.score-stats {
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin: 10rpx 0;
  flex-wrap: wrap; /* 允许统计项目换行 */
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 30%; /* 确保每列不会太窄 */
  margin: 10rpx 0;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
}

.stat-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-top: 5rpx;
}

/* 用户操作菜单 */
.action-menu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.action-menu-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.action-menu-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item text {
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.logout text {
  color: #f44336;
}

.cancel {
  margin-top: 20rpx;
  color: #999;
}

/* 管理员功能区样式 */
.admin-section {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #8BC34A;
  padding-left: 20rpx;
}

.admin-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

/* 按钮基本样式 - 参考计分页面按钮 */
.admin-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #e0e0e0;
}

/* 更淡的按钮颜色 */
.export-btn {
  background-color: #c8e6c9; /* 更淡的绿色 */
  color: #388e3c;
}

.import-btn {
  background-color: #bbdefb; /* 更淡的蓝色 */
  color: #1976d2;
}

.create-btn {
  background-color: #dcedc8; /* 另一种淡绿色 */
  color: #558b2f;
}

.manage-btn {
  background-color: #e1f5fe; /* 另一种淡蓝色 */
  color: #0288d1;
}

/* 选手列表样式 */
.players-list-modal {
  display: flex;
  flex-direction: column;
  max-height: 90vh;
}

.players-list-modal .modal-header {
  flex-shrink: 0;
}

.players-list-modal .modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
  padding-bottom: 20rpx;
}

.players-list-modal .modal-footer {
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  background-color: #fff;
}

.players-list {
  height: 100%;
  min-height: 400rpx;
}

.players-count {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.player-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.player-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.player-list-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.player-list-detail {
  display: flex;
  flex-direction: column;
  min-width: 0;
  flex: 1;
}

.player-list-name {
  font-size: 30rpx;
